<div class="container-fluid text-center">
  <%= cl_image_tag(@article.photo, class: "img-fluid", alt: "article photo") %>
</div>
<div class="container-fluid d-flex flex-column">
  <div class="border">
    <h2 class="text-center text-uppercase">
      <%= @article.title %>
    </h2>
    <h3 class="text-capitalize">
      Cat√©gorie : <%= @article.profession %>
    </h3>
    <h4>
      <% date = @article.created_at.to_s.first(16) %>
      <%= date %>
    </h4>
    <p>
      <%= @article.content %>
    </p>
    <%= link_to("Tous les articles", articles_path, class: "btn btn-danger") %>
    <% if current_user.admin %>
      <%= link_to("Modifier l'article", edit_article_path, class: "btn btn-danger") %>
    <% end %>
  </div>
</div>
